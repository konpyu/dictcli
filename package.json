{
  "name": "@konpyu/dictcli",
  "version": "1.0.0",
  "description": "LLM-First Dictation TUI App for Japanese English learners",
  "type": "module",
  "bin": {
    "dictcli": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "scenes",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konpyu/dictcli.git"
  },
  "homepage": "https://github.com/konpyu/dictcli#readme",
  "bugs": {
    "url": "https://github.com/konpyu/dictcli/issues"
  },
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "dev:tech": "tsx src/cli.tsx --topic Technology --level CEFR_B1",
    "dev:advanced": "tsx src/cli.tsx --topic Business --level CEFR_C1 --words 20 --voice NOVA",
    "dev:beginner": "tsx src/cli.tsx --topic EverydayLife --level CEFR_A1 --words 5 --voice SARA",
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dictation",
    "english-learning",
    "english",
    "japanese",
    "tui",
    "cli",
    "terminal",
    "openai",
    "gpt",
    "language-learning",
    "education"
  ],
  "author": "konpyu <konpyu@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/uuid": "^10.0.0",
    "@types/node": "^24.1.0",
    "@types/play-sound": "^1.1.2",
    "@types/react": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "ink": "^4.4.1",
    "openai": "^5.12.2",
    "play-sound": "^1.1.6",
    "react": "^18.3.1",
    "uuid": "^11.1.0",
    "zustand": "^4.5.7"
  }
}
